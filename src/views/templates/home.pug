extends ../layout/layout

block stylesheets

  //- SLICK CSS
  link(rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css")
  link(rel="stylesheet" href="/assets/css/slick-theme.css")

  //- EXTERNAL STYLESHEETS
  link(rel="stylesheet" href="/assets/css/loader.css")
  link(rel="stylesheet" href="/assets/css/home.css")

block contents

  //- PRE LOADER
  div.loader
    div.loader-grid.left
    div.loader-grid.right
    div.loader-grid.left-right
    div.loader-grid.right-left
    div.loader-container
      div.lds
        div
        div
        div

  //- HEADER SECTION
  header.header
    div.header__banner
      div.header__banner-logo
        a(href="#") FASHIONIT

      div.header__banner-auth.text-center
        span Log in | Signup

      div.header__banner-cart.text-center
        a(href="/checkout")
          i.fa.fa-cart-arrow-down(aria-hidden="true")

    div.header__hero
      nav.header__hero-nav
        a(href="/shop") SHOP
        a(href="/categories") CATEGORIES

      div.header__hero-social.social
        a(href="#" target="_blank" rel="noopener noreferrer")
          i.fa.fa-facebook(aria-hidden="true")

        a(href="#" target="_blank" rel="noopener noreferrer")
          i.fa.fa-twitter(aria-hidden="true")

        a(href="#" target="_blank" rel="noopener noreferrer")
          i.fa.fa-instagram(aria-hidden="true")

        a(href="#" target="_blank" rel="noopener noreferrer")
          i.fa.fa-whatsapp(aria-hidden="true")

      div.header__hero-text
        p.sub-header TRENDING COLLECTION
        h1.main-header
          span NEW ARRIVAL
        h3.discount 50% 
          span OFF

  //- FEATURED SECTION 
  section.featured.ptb
    div.featured__header.medium-header.text-center
      h2 FEATURED PRODUCTS

    div.slick
      figure.item
        img(src="assets/img/products/men/grey-shirt.png" alt="")
        figcaption.products__name.text-center GREY SHIRT
        p.products__price $20
        button.add-to-cart-btn(data-id="") ADD TO CART

      figure.item
        img(src="assets/img/products/women/red-gown.png" alt="")
        figcaption.products__name.text-center RED GOWN
        p.products__price $100
        button.add-to-cart-btn(data-id="") ADD TO CART

      figure.item
        img(src="assets/img/products/men/scott-backpack.png" alt="")
